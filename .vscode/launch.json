  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Frontend debugger",
      "url": "http://localhost:3000",
      "address": "localhost",
      "webRoot": "${workspaceFolder}/backend/"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Backend debugger",
      "port": 9228,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/backend/",
      "remoteRoot": "/usr/src/app/backend/",
      "protocol": "inspector"
    }
  ]
}